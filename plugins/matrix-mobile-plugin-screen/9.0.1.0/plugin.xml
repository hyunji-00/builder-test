<plugin compile="true" id="matrix-mobile-plugin-screen" type="basic" version="9.0.1.0">

    <name>Screen</name>
    <description>MatrixMobile Screen Plugin</description>

    <!-- android -->
    <platform name="android">

        <js-module name="screen" src="www/screen.js">
            <clobbers target="matrixMobile.plugin.screen" />
        </js-module>

        <config-file target="PluginConfig.yaml">
            <feature name="ScreenPlugin">
                <param name="android-package" value="matrix.mobile.plugin.screen.ScreenPlugin" />
            </feature>
        </config-file>

        <lib-file src="libs/matrix-mobile-plugin-screen-9.0.1.0.jar" />

    </platform>


</plugin>
